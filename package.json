{
  "name": "vsus",
  "displayName": "VSUS",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsus.welcome"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsus.showInfoNotification",
        "title": "Information Notification"
      },
      {
        "command": "vsus.showWarningNotification",
        "title": "Warning Notification"
      },
      {
        "command": "vsus.showErrorNotification",
        "title": "Error Notification"
      },
      {
        "command": "vsus.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vsus.createCProject",
        "title": "Create Project: C"
      },
      {
        "command": "vsus.createCPPProject",
        "title": "Create Project: C++"
      },
      {
        "command": "vsus.createReactProject",
        "title": "Create Project: React"
      },
      {
        "command": "vsus.createNodeProject",
        "title": "Create Project: NodeJS"
      },
      {
        "command": "vsus.createdjangoProject",
        "title": "Create Project: django"
      }
    ],
    "snippets": [
      {
        "language": "c",
        "path": "./src/json/snippets/c.json"
      },
      {
        "language": "cpp",
        "path": "./src/json/snippets/cpp.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.0",
    "fs-extra": "^11.1.0",
    "path": "^0.12.7"
  }
}